<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="130dip"
    android:layout_height="130dip"
    android:background="@drawable/shape_rect_tblack" >
    <LinearLayout
        android:layout_width="129dip"
        android:layout_height="129dip"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dip" >
        <TextView
            android:id="@+id/progress_shape"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:background="@drawable/icon_wx_timeline"
            android:gravity="center"
            android:text="" />
        <TextView
            android:id="@+id/progress_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:gravity="center_vertical"
            android:padding="3dip"
            android:text="请稍后"
            android:textColor="@color/white"
            android:textSize="13sp" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dip" />

</LinearLayout>